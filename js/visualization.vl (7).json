{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Relationship between healthy life expectancy, freedom to make life choices and global happiness",
  "width": "container",
  "repeat": {
    "row": [
      "happiness_score",
      "freedom_to_make_life_choices",
      "healthy_life_expectancy"
    ],
    "column": [
      "happiness_score",
      "freedom_to_make_life_choices",
      "healthy_life_expectancy"
    ]
  },
  "spec": {
    "data": {
      "url": "https://raw.githubusercontent.com/jlee0256/Visualisation-2-/main/data/WHR_years.csv"
    },
    "mark": {"type": "point", "opacity": 0.5, "size": 8},
    "params": [
      {
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![event.shiftKey]"
        }
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative"},
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "color": {
        "condition": {
          "param": "brush",
          "field": "continent",
          "type": "nominal",
          "title": "Continent"
        },
        "value": "grey"
      }
    }
  },
  "config": {}
}