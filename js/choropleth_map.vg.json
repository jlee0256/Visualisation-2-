
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World happiness over time",
  "width": "container",
  "params": [
    {
      "name": "Year",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/jlee0256/Visualisation-2-/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [{"filter": {"field": "year", "equal": {"param": "year"}}}],
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white", "strokeWidth": 0.1},
      "transform": [{"calculate": "'Data is unavailable in ' + datum.properties.NAME", "as": "note"}],
      "selection": {
        "country_highlight": {
          "type": "interval",
          "fields": ["happiness_score"],
          "bind": "legend"
        }
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "steelblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "gainsboro", "strokeWidth": 0.3}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jlee0256/Visualisation-2-/main/data/WHR_years.csv"
            },
            "key": "country",
            "fields": ["happiness_score", "gdp_per_capita"]
          },
          "default": 0
        },
              {"filter": "datum.year == Year"}      
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "happiness_score",
          "title": "Happiness Score",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 10],
            "range": [
              "#D1A000",
              "#D9A400",
              "#D9B200",
              "#B1BA00",
              "#8FA100",
              "#689F00",
              "#3A9000",
              "#006B22",
              "#00581F",
              "#004B11"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "country_highlight", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country:"},
          {"field": "happiness_score", "type": "quantitative", "title": "Happiness score:"},
          {"field": "gdp_per_capita", "type": "quantitative", "title": "GDP per capita:"}
        ]
      }
    }
  ],
  "config": {}
}
