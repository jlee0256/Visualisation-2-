{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Happiness Report in 2023",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/jlee0256/Visualisation-2-/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is unavailable in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "white",
        "strokeWidth": 0.1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "steelblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "gainsboro",
        "strokeWidth": 0.3
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jlee0256/Visualisation-2-/main/data/WHR_2023.csv"
            },
            "key": "country",
            "fields": ["happiness_score", "gdp_per_capita"]
          },
          "default": 0
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "happiness_score",
          "title": "Happiness Score",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 10],
            "range": [
              "#D1A000",
              "#D9A400",
              "#D9B200",
              "#B1BA00",
              "#8FA100",
              "#689F00",
              "#3A9000",
              "#006B22",
              "#00581F",
              "#004B11"
            ]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country:"},
          {
            "field": "happiness_score",
            "type": "quantitative",
            "title": "Happiness Score"
          },
          {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "title": "GDP per capita"
          }
        ]
      }
    }
  ],
  "config": {}
}