{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Social support vs Happiness score",
  "data": {
    "url": "https://raw.githubusercontent.com/jlee0256/Visualisation-2-/main/data/WHR_2023(2).csv"
  },
  "params": [
    {
      "name": "gdp_per_capita",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2,
        "step": 0.001,
        "name": "GDP per capita:"
      }
    },
    {
      "name": "continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.social_support > 0"},
    {"filter": "datum.happiness_score > 0"},
    {"filter": "datum.gdp_per_capita > gdp_per_capita"},
    {
      "filter": "continent_selection == null || datum.continent == continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "social_support",
      "type": "quantitative",
      "title": "Social Support",
      "axis": {"tickCount": 50},
      "scale": {"type": "log", "domain": [0, 2]}
    },
    "y": {
      "field": "happiness_score",
      "type": "quantitative",
      "title": "Happiness Score",
      "axis": {"tickCount": 50},
      "scale": {"type": "log", "domain": [0, 10]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "gdp_per_capita",
          "type": "quantitative",
          "title": "GDP per capita"
        },
        "color": {
          "field": "continent",
          "title": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a3c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#b03428"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country:"},
          {
            "field": "continent",
            "type": "nominal",
            "format": ",",
            "title": "Continent:"
          },
          {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "format": ",",
            "title": "GDP per capita:"
          },
          {
            "field": "happiness_score",
            "type": "quantitative",
            "format": ",",
            "title": "Happiness Score:"
          },
          {
            "field": "social_support",
            "type": "quantitative",
            "format": ",",
            "title": "Social Support:"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Confirmed", "type": "quantitative", "format": ","},
          {"field": "Active", "type": "quantitative", "format": ","},
          {"field": "Deaths", "type": "quantitative", "format": ","},
          {"field": "Recovered", "type": "quantitative", "format": ","},
          {"field": "happiness_score", "type": "quantitative", "format": ".2f"}
        ]
      }
    }
  ],
  "config": {}
}
